{{!-- Display validation errors if any --}}
{{#each erros}}
    <div class="alert alert-danger" role="alert">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <div class="form-group mb-3"> {{!-- Added mb-3 for spacing --}}
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" class="form-control" placeholder="Título da postagem" value="{{titulo}}" required>
            </div>

            <div class="form-group mb-3"> {{!-- Added mb-3 for spacing --}}
                <label for="slug">Slug:</label>
                <input type="text" id="slug" name="slug" class="form-control" placeholder="slug-da-postagem" value="{{slug}}" 
                       required pattern="[a-z0-9\-]+" title="Apenas letras minúsculas, números e hífens.">
            </div>

            <div class="form-group mb-3"> {{!-- Added mb-3 for spacing --}}
                <label for="descricao">Descrição:</label>
                <input type="text" id="descricao" name="descricao" class="form-control" placeholder="Breve descrição da postagem" value="{{descricao}}" required>
            </div>

            <div class="form-group mb-3"> {{!-- Added mb-3 for spacing --}}
                <label for="conteudo">Conteúdo:</label>
                <textarea id="conteudo" name="conteudo" class="form-control" rows="5" placeholder="Escreva o conteúdo completo da postagem aqui..." required>{{conteudo}}</textarea>
            </div>

            <div class="form-group mb-4"> {{!-- Added mb-4 for more spacing before buttons --}}
                <label for="categoria">Categoria:</label>
                {{!-- Changed custom-select to form-select for Bootstrap 5+ --}}
                <select id="categoria" name="categoria" class="form-select" required>
                    <option value="0">-- Selecione uma categoria --</option>
                    {{#each categorias}}
                        {{!-- Uses 'categoriaSelecionada' from controller for re-selection --}}
                        <option value="{{_id}}" {{#if (eq ../categoriaSelecionada _id)}}selected{{/if}}>{{nome}}</option>
                    {{else}}
                        <option value="0" disabled>Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            </div>

            <button class="btn btn-success" type="submit">Criar postagem</button>
            <a href="/admin/postagens" class="btn btn-secondary ms-2">Cancelar</a> {{!-- Added ms-2 for margin-left --}}
        </form>
    </div>
</div>