{{!-- Display validation errors if any --}}
{{#each erros}}
    <div class="alert alert-danger" role="alert">{{texto}}</div>
{{/each}}

<h3>Editar Categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">
            {{!-- Hidden input to pass the category ID for update --}}
            <input type="hidden" name="id" value="{{categoria._id}}">

            <div class="form-group mb-3"> {{!-- Added mb-3 for spacing --}}
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control"
                    value="{{#if erros}}{{nome}}{{else}}{{categoria.nome}}{{/if}}" required> {{!-- Added 'required' attribute --}}
            </div>

            <div class="form-group mb-4"> {{!-- Added mb-4 for more spacing before buttons --}}
                <label for="slug">Slug:</label>
                <input type="text" id="slug" name="slug" placeholder="slug-da-categoria" class="form-control"
                    value="{{#if erros}}{{slug}}{{else}}{{categoria.slug}}{{/if}}"
                    required pattern="[a-z0-9\-]+" title="Apenas letras minúsculas, números e hífens."> {{!-- Added 'required', 'pattern', and 'title' attributes --}}
            </div>

            <button type="submit" class="btn btn-success">Salvar Alterações</button> {{!-- Changed button text to be more explicit --}}
            <a href="/admin/categorias" class="btn btn-secondary ms-2">Cancelar</a> {{!-- Added ms-2 for margin-left --}}
        </form>
    </div>
</div>