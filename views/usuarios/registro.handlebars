{{!-- Error messages display --}}
{{#each erros}}
    <div class="alert alert-danger" role="alert">{{texto}}</div>
{{/each}}

<h3>Crie sua conta</h3>

<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="POST"> {{!-- Corrected action and added method --}}
            <div class="form-group mb-3"> {{!-- Added form-group and mb-3 for spacing --}}
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" class="form-control" placeholder="Seu nome completo" value="{{nome}}" required> {{!-- Added id, placeholder, and value for persistence --}}
            </div>

            <div class="form-group mb-3"> {{!-- Added form-group and mb-3 for spacing --}}
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Seu melhor email" value="{{email}}" required> {{!-- Added id, placeholder, and value for persistence --}}
            </div>

            <div class="form-group mb-3"> {{!-- Added form-group and mb-3 for spacing --}}
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" class="form-control" placeholder="Crie uma senha" required> {{!-- Added placeholder --}}
            </div>

            <div class="form-group mb-4"> {{!-- Added form-group and mb-4 for spacing before buttons --}}
                <label for="senha2">Repita sua senha:</label>
                <input type="password" id="senha2" name="senha2" class="form-control" placeholder="Confirme sua senha" required> {{!-- Added placeholder --}}
            </div>

            <button type="submit" class="btn btn-success">Criar conta</button> {{!-- Removed redundant mt-4 --}}
        </form>
        <p class="mt-3">Já tem uma conta? <a href="/usuarios/login">Faça login aqui</a></p> {{!-- Added login link --}}
    </div>
</div>