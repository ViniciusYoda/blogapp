{{!-- Error messages display --}}
{{#each erros}}
    <div class="alert alert-danger" role="alert">{{texto}}</div>
{{/each}}

<h3>Entre na sua conta</h3>

<div class="card">
    <div class="card-body">
        <form action="/usuarios/login" method="POST"> {{!-- Added action and method attributes --}}
            <div class="form-group mb-3"> {{!-- Added form-group and mb-3 for spacing --}}
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Seu email" value="{{email}}" required> {{!-- Added id, placeholder, and value for persistence --}}
            </div>

            <div class="form-group mb-4"> {{!-- Added form-group and mb-4 for spacing --}}
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" class="form-control" placeholder="Sua senha" required> {{!-- Added placeholder --}}
            </div>

            <button type="submit" class="btn btn-success">Entrar</button> {{!-- Removed mt-4 here as form-group mb-4 handles spacing --}}
        </form>
        <p class="mt-3">Ainda n√£o tem uma conta? <a href="/usuarios/registro">Registre-se aqui</a></p> {{!-- Added registration link --}}
    </div>
</div>