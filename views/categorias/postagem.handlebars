<h1 class="mb-4">{{categoria.nome}}</h1> {{!-- Added mb-4 for spacing below the title --}}

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3 class="card-title">{{titulo}}</h3> {{!-- Using card-title for semantic HTML and Bootstrap styling --}}
        <p class="card-text">{{descricao}}</p> {{!-- Using card-text --}}
        <a href="/postagens/{{slug}}" class="btn btn-primary">Leia mais</a> {{!-- Changed to btn-primary for consistency --}}
        <hr class="my-3"> {{!-- Added my-3 for vertical margin --}}
        <small class="d-block mb-1">Categoria: {{categoria.nome}}</small> {{!-- d-block and mb-1 for layout and spacing --}}
        {{!-- Use a Handlebars helper to format the date for better readability --}}
        <small class="d-block">Data de publicação: {{formatDate data "DD/MM/YYYY HH:mm"}}</small> {{!-- d-block for layout --}}
    </div>
</div>

{{else}}
    <h5 class="mt-4 text-muted" role="alert">Nenhuma postagem encontrada para esta categoria.</h5> {{!-- Added text-muted and role="alert" --}}
{{/each}}